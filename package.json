  "@types/node-fetch": "^2.1.4",
  "babel-core": "^6.26.3",
  "babel-jest": "^23.0.0",
  "jest": ">=22 <24",
  "np": "^4.0.2",
  "ts-jest": "^23.10.5",
  "tslint": "^5.9.1",
  "typescript": "^3.0.3",
  "watch": "^1.0.2"
 }
